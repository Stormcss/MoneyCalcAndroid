<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">
    <!--android:background="@color/indigo300"-->

    <ImageView
        android:id="@+id/stats_sum_by_date_section_logo"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:src="@drawable/ic_restaurant_black_24dp" />

    <TextView
        android:id="@+id/stats_sum_by_date_section_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:textStyle="bold"
        android:text="30.05.2019"
        android:textSize="18sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/stats_sum_by_date_section_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="Restaurants"
        android:maxLines="1"
        android:textSize="18sp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/stats_sum_by_date_section_sum"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="15 888 821"
        android:textSize="19sp" />
    <!--android:textColor="@color/colorWhite" -->
</LinearLayout>